<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/last_screen">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Time"
        android:id="@+id/totalTime"
        android:layout_above="@+id/totalDistance"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:textSize="15dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Distance"
        android:id="@+id/totalDistance"
        android:layout_above="@+id/totalCaloriesBurn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:textSize="15dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Calories Burn"
        android:id="@+id/totalCaloriesBurn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Steps Taken"
        android:id="@+id/totalSteps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/totalCaloriesBurn"
        android:textSize="15dp"
        android:textColor="@color/white" />


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_above="@+id/bt_share"
        android:layout_centerHorizontal="true">
    </com.google.android.gms.ads.AdView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:id="@+id/bt_share"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:background="@color/skyBlue" />


</RelativeLayout>